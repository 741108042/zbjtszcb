{% extends '::base.html.twig' %}

{% block body -%}
 <div id="main-container" class="main-container">
 <div class="main-content">
    <div class="breadcrumbs">
             <ul class="breadcrumb">
                        <li>
                            <i class="ace-icon fa fa-home home-icon"></i>
                            <a href="#">直播</a>
                        </li>
                    <li class="active">
                            
                             动态 
                        </li></ul>

        <!-- breadcrumbs goes here -->
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <table id="sample-table-1" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                 <th>新闻标题</th>
                <th>来源</th>
                <th>作者</th>
                 <th>发表时间</th>
                <th>置顶</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr >
                <td><a href="{{ path('topic_subject_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                 <td>
<div class="accordion-style1 panel-group" id="accordion">
                                            <div class="panel panel-default" style="width:400px;">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a href="#intro{{ entity.id }}" data-parent="#accordion" data-toggle="collapse" class="accordion-toggle collapsed" aria-expanded="false">
                                                             
                                                            &nbsp;{{ entity.title }}
                                                        </a>
                                                    </h4>
                                                </div>

                                                <div id="intro{{ entity.id }}" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                                    <div class="panel-body">
                                                        {{ entity.intro }}
                                                    </div>
                                                </div>
                                            </div>
 
 
                                        </div>

                 </td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.author }}</td>
                
                <td>{{ entity.created|date("Y-m-d H:i:s") }}</td>
                <td>
             
                    {% if entity.istop==1 %}
                    <span class="glyphicon glyphicon-ok-circle"></aspan>
                    {% endif %}</td>
                <td>
                     
                    <div class="btn-group">
                        <button class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                            操作
                            <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-default">
                             <li>
                                <a href="{{ path('topic_subject_op', { 'id': entity.id ,'op':'top'}) }}">置顶</a>
                            </li>

                            <li>
                                <a href="{{ path('topic_subject_op', { 'id': entity.id ,'op':'untop'}) }}">取消置顶</a>
                            </li>
                            <li class="divider"></li>

                            <li>
                                <a href="{{ path('topic_subject_op', { 'id': entity.id ,'op':'pub'}) }}">审核通过</a>
                            </li>

                            <li>
                                <a href="{{ path('topic_subject_op', { 'id': entity.id ,'op':'unpub'}) }}">审核不通过</a>
                            </li>

                        </ul>
                    </div>
                 </td>
            </tr>
                {% if img_entities[entity.id] %}
                <tr><td  style="border-top:0;"></td><td colspan=7 style="border-top:0;">
                    {% for pic in img_entities[entity.id] %}
                     <img width="100" src="{{ pic.image|replace({'upload':'upload/small'}) }}" alt="Image 4">

                    {%  endfor %}
                </td></tr>
                {% endif %} 
        {% endfor %}
         <tfoot>
                        <tr>
                            <td colspan="8">
                                {{ knp_pagination_render(pagination) }}            
                            </td>
                        </tr>
        </tfoot>
        </tbody>
    </table>
</div></div></div></div></div>
        <ul>
        <li>
            <a href="{{ path('topic_subject_new',{'topic_id':topic_id}) }}">
                新增动态
            </a>
        </li>
    </ul> 
    {% endblock %}
