{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Employee list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Sex</th>
                <th>Education</th>
                <th>Createtime</th>
                <th>Updatetime</th>
                <th>Photopath</th>
                <th>Jlpath</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('employee_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.sex }}</td>
                <td>{{ entity.education }}</td>
                <td>{% if entity.createtime %}{{ entity.createtime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatetime %}{{ entity.updatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.photopath }}</td>
                <td>{{ entity.jlpath }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('employee_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('employee_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('employee_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
