{% extends '::base.html.twig' %}

{% block body -%} 

<style>

.glyphicon{font-size:20px;}
</style>
<div id="main-container" class="main-container">
 <div class="main-content">
    <div class="breadcrumbs">
             <ul class="breadcrumb">
                        <li>
                            <i class="ace-icon fa fa-home home-icon"></i>
                            <a href="#">书库</a>
                        </li>
                    <li class="active">
                            
Category list                        </li></ul>

        <!-- breadcrumbs goes here -->
    </div>
    <div class="page-content">
  <div class="row">
            <div class="col-xs-12">
                <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>类别名称</th>
                <th>id</th><th>排序</th>
                 <th>状态</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('book_category_show', { 'id': entity.id }) }}">{{ entity.category }}</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.sortid }}
                <div style="width:50px">
                        <a href="{{path('category_sort', {'id':entity.id,'op':1})}}" class="glyphicon glyphicon-arrow-up"></a>
                        <a href="{{path('category_sort', {'id':entity.id,'op':2})}}" class="glyphicon glyphicon-arrow-down"></a>

                    </div>
                </td>
                <td>{{ entity.status }}
                <div style="width:50px">
                    {% if entity.status==2 %}
                        <span class="glyphicon glyphicon-remove-circle"></span>
                        {% endif %}
                        {% if entity.status==1 %}
                        <span class="glyphicon glyphicon-ok-circle"></span>
                        {% endif %}
 
                    </div>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('book_category_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('book_category_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>

                     {% if entity.status==1 %}
                        <a href="{{path('category_status', {'id':entity.id,'op':2})}}" class="glyphicon glyphicon-remove-circle"></a>
                        {% endif %}
                        {% if entity.status==2 %}
                        <a href="{{path('category_status', {'id':entity.id,'op':1})}}" class="glyphicon glyphicon-ok-circle"></a>
                        {% endif %}</li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></div></div></div></div>
        <ul>
        <li>
            <a href="{{ path('book_category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
