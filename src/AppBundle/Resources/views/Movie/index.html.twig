{% extends '::base.html.twig' %}

{% block body %}
<div id="main-container" class="main-container">
 <div class="main-content">
    <div class="breadcrumbs">
             <ul class="breadcrumb">
                        <li>
                            <i class="ace-icon fa fa-home home-icon"></i>
                            <a href="#">影片库</a>
                        </li>
                    <li class="active">
                            
                             Dashboard 
                        </li></ul>

        <!-- breadcrumbs goes here -->
    </div>
    <div class="page-content">

        <!-- setting box goes here if needed -->
        <div class="row">
            <div class="col-xs-12">

                <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">
                                <label class="position-relative">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </th>
                             <th>图</th>
                            <th>名称</th>
                              <th>分类</th>

                            <th>
                                <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                上映时间
                            </th>
 
                            <th></th>
                        </tr>
                    </thead>
                     <tbody>
                    {% for entity in pagination %}
                        <tr>
                            <td><a href="{{ path('m_show', { 'id': entity.nodeId }) }}">{{ entity.nodeId }}</a></td>
                            <td><img src="http://www.60movie.com/{{ entity.cover }}" width=100/></td>

                            <td>{{ entity.title }}</td> 
                             <td>{{ entity.kind }}</td>
                             <td>{{ entity.pubdate }}</td>
 
                            <td>
                            <ul>
                                <li>
                                    <a href="{{ path('m_show', { 'id': entity.nodeId }) }}">详情</a>
                                </li>
                                <li>
                                    <a href="{{ path('m_edit', { 'id': entity.nodeId }) }}">编辑</a>
                                </li>
                            </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    <tfoot>
                        <tr>
                            <td colspan="4">
                                {{ knp_pagination_render(pagination) }}            
                            </td>
                        </tr>
                    </tfoot>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
</div>
    

