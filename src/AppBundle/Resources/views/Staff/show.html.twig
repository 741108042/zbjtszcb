{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Staff</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Openid</th>
                <td>{{ entity.openid }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ entity.company }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ entity.job }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ entity.depart }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('staff') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('staff_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
