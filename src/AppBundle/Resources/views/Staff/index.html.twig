{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Staff list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Openid</th>
                <th>Company</th>
                <th>Username</th>
                <th>Job</th>
                <th>Depart</th>
                <th>Code</th>
                <th>Status</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('staff_show', { 'id': entity.id }) }}">{{ entity.openid }}</a></td>
                <td>{{ entity.company }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.job }}</td>
                <td>{{ entity.depart }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('staff_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('staff_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('staff_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
