<!DOCTYPE html>
<html>
<head>   <link rel="stylesheet" href="{{ asset('bundles/swiper/css/swiper.min.css') }}">
     <style>
.blue-slide {
    background: none repeat scroll 0 0 #4390ee;
}
.red-slide {
    background: none repeat scroll 0 0 #ca4040;
}
.orange-slide {
    background: none repeat scroll 0 0 #ff8604;
}
.swiper-slide {
    color: #fff;
    font-size: 36px;
     text-align: center;
}
 
    </style>
</head>
<body>
<div class="swiper-container swiper-container-horizontal">
      <div class="swiper-wrapper">
        {% for item in entity %}
        <div class="swiper-slide blue-slide swiper-slide-active">
            <p>{{ item['title'] }}</p>
            {% if item['pics'] %}
                      {% for pic in item['pics'] %}

                        <img src="{{pic['src']}}"width=100%>
                        {% endfor %}
                        {% endif %}

        </div> 
        {% endfor %}
    </div>
</div>


    <script src="{{ asset('bundles/swiper/js/swiper.min.js')}}"></script>
     <script>        
  var mySwiper = new Swiper (".swiper-container", {
     direction: "vertical"
  })        
  </script>
</body>
</html>