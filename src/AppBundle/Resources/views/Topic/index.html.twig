{% extends '::base.html.twig' %}

{% block body -%}
<div id="main-container" class="main-container">
 <div class="main-content">
    <div class="breadcrumbs">
             <ul class="breadcrumb">
                        <li>
                            <i class="ace-icon fa fa-home home-icon"></i>
                            <a href="#">直播管理</a>
                        </li>
                    <li class="active">
                            
                             直播列表 
                        </li></ul>

        <!-- breadcrumbs goes here -->
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>主题</th>
                <th>编辑</th>
                <th>封面</th>
                <th>发布地址</th>
                <th>发布时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('topic_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td><img src="{{ entity.cover }}" width=100></td>
                <td><a href="{{ url('topic_view',{'id':entity.id} ) }}" target="_blank" >{{ url('topic_view',{'id':entity.id} ) }}</a></td>
                <td>{{ entity.created|date("Y-m-d H:i:s") }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('topic_show', { 'id': entity.id }) }}">预览</a>
                    </li>
                    <li>
                        <a href="{{ path('topic_edit', { 'id': entity.id }) }}">编辑</a>
                    </li>
                     <li>
                        <a href="{{ path('topic_subject', { 'topic_id': entity.id }) }}">动态管理</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></div></div></div></div>
